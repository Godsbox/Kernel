<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircularProgressView">
        <item name="android:id">@id/loading</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="cpv_thickness">2dp</item>
        <item name="cpv_color">?attr/colorPrimary</item>
        <item name="cpv_animAutostart">true</item>
        <item name="cpv_indeterminate">true</item>
    </style>

    <style name="PrimaryEllipseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/app_selector_ellipse_primary</item>
    </style>

    <style name="SwipeRefreshLayout">
        <item name="android:id">@id/refresh_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>